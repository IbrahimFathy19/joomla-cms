<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="template" client="site">
	
	<name>exquint</name>
	<version>1.0</version>
	<creationDate>26/03/2019</creationDate>
	<author>Ibrahim Fathy</author>
	<authorEmail>ibrahim_fathy@outlook.com</authorEmail>
	<copyright>Copyright (C) 2005 - 2019 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>Template for commercial websites. GSOC xD</description>
	
	<files>
		<folder>css</folder>
		<folder>js</folder>
		<folder>html</folder>
		<folder>images</folder>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<positions>
		<position>menu-left</position>
		<position>menu-right</position>
		<position>showcase</position>
		<position>breadcrumbs</position>
		<position>sidebar-left</position>
		<position>sidebar-right</position>
		<position>main</position>
		<position>footer</position>
		<position>message</position>
	</positions>
	
	<config>
		<fields name="params" name="advanced" addfieldprefix="">
			<fieldset>
				
				<field
					name="icecream" 
					type="Icecream"
					label="Ice Cream flavor"
				/>

				<field
					name="siteTitle" 
					type="text" 
					default=""
					label="Site Title"
					filter="string"
				/>
				<field
					name="siteDescription" 
					type="text" 
					default=""
					label="Site Description"
					filter="string"
				/>

				
			</fieldset>
		</fields>
	</config>

</extension>
